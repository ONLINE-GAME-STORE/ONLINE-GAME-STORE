{{!-- GAME DETAILS --}}
{{#with gameDetail}}
<h1>{{name}}</h1>
<img src="{{posterUrl}}" alt="Image of {{name}}">
<p>Game developed by - {{name}}</p>
<p>Description: {{description}}</p>
{{/with}}
{{#if sameUserCheck}}
<a href="/games/{{gameDetail._id}}/edit">Edit the Game</a>
{{/if}}
{{#with gameDetail}}
<form action="/games/{{_id}}" method="POST">
    <label for="review">Give a review üòé </label>
    <input type="text" name="review" id="review">
    <button type="submit">Submit</button>
</form> 
{{/with}}
{{!-- FIVE REVIEWS --}}
{{#each fiveReviews}}
<div>
    <p>{{this.user.username}}:</p>
<br>
{{this.text}}
</div>
{{/each}}

